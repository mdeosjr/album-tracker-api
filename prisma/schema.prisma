generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int           @id @default(autoincrement())
  name     String
  email    String        @unique
  password String
  albums   AlbumToUser[]

  @@map("users")
}

model Album {
  spotifyAlbumId String        @id
  name           String        @unique
  artist         String
  list           List
  url            String
  cover          String
  albums         AlbumToUser[]
  tracks         Track[]

  @@map("albums")
}

model AlbumToUser {
  id      Int    @id @default(autoincrement())
  albumId String
  userId  Int
  album   Album  @relation(fields: [albumId], references: [spotifyAlbumId])
  user    User   @relation(fields: [userId], references: [id])

  @@map("albumToUser")
}

model Track {
  spotifyTrackId String  @id
  name           String
  albumId        String
  isMarked       Boolean @default(false)
  url            String
  album          Album   @relation(fields: [albumId], references: [spotifyAlbumId])

  @@map("tracks")
}

enum List {
  LISTENING
  LISTENED
  TO_LISTEN
}
